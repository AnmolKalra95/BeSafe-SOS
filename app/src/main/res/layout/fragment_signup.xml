<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardbgcolor"
    tools:context="android.app.sosapplication.LoginActivity"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
android:paddingTop="10dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crd_name"
        app:cardCornerRadius="5dp"

             >
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Enter Your Name"
        android:background="@color/tabtxtcolor"
        android:textSize="18dp"
        android:inputType="textPersonName"
        android:padding="5dp"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crd_mobile"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/crd_name"
        android:layout_marginTop="18dp"
        >
    <EditText
        android:id="@+id/signupcontact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabtxtcolor"
        android:hint="MobileNumber"
        android:inputType="phone"
        android:textSize="18dp"
        tools:maxLength="12"
        android:padding="5dp"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crd_pass"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/crd_mobile"
        android:layout_marginTop="18dp"
        >
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="Your Password Here"
        android:background="@color/tabtxtcolor"
        android:textSize="18dp"
        android:inputType="textPassword"
        android:padding="5dp"
        />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crd_email"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/crd_pass"
        android:layout_marginTop="18dp"

        >
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="Your Email Id"
        android:background="@color/tabtxtcolor"
        android:textSize="18dp"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        />
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crd_address"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/crd_email"
        android:layout_marginTop="18dp"
        >
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="Residence Address"
        android:background="@color/tabtxtcolor"
        android:textSize="18dp"
        android:inputType="textMultiLine"
        android:padding="5dp"
             />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crd_btn"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/crd_address"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/button_bg"
            android:text="Register"
            android:textColor="@color/tabtxtcolor"
            android:textSize="15sp"
            android:padding="5dp"

            />
    </android.support.v7.widget.CardView>

</RelativeLayout>