<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:id="@+id/crd_btn_address"
        app:cardCornerRadius="10dp"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/pb"
        >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_bg"
            android:text="Get Your Location"
            android:id="@+id/curent_location"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/tabtxtcolor"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:id="@+id/crd_btn_send"
        app:cardCornerRadius="10dp"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/crd_btn_address"
        >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_bg"
            android:text="BeSafe"
            android:id="@+id/BeSafe"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="@color/tabtxtcolor"
            />
    </android.support.v7.widget.CardView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationview"
        android:textSize="25dp"
        android:text="Your Curent Address"

        android:padding="5dp"
        />
<!--<ImageButton
    android:layout_width="100dp"
